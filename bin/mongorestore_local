  mkrestore = function(uri, dumppath){
    var login, host, db, user, passwd;
    login = mongoUri.parse(uri);
    host = login['hosts'][0] + ':' + login['ports'][0];
    db = login['database'];
    user = login['username'];
    passwd = login['password'];
    return sysexec('mongorestore --host ' + host + ' --db ' + db + " '" + dumppath + "'");
  };
